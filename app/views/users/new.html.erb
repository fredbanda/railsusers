<% provide(:title, 'Sign Up') %>

<h1>Sign up</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-6 col-md-offset-3 w-50">
        <%= form_with(model: @user) do |f| %>
            <%= render 'shared/error_messages' %>
            <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>
            <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
            <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
            <%= f.password_field :password_confirmation, placeholder: "Confirm your password", class: "form-control" %>
            <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
